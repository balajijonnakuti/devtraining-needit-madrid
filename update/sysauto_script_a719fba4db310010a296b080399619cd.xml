        <script><![CDATA[// get tooday's date and time

	var nowTime= new GetDateTime();
// retrive data from needit table table whose due date is less than current data. 
// Only return NeedIt Task records that do not have
	// a State field value of Closed Complete.

var tasks = new glideRecord("x_58872_needit_needit_task");
tasks.addQuery('due_date','<=','nowTime');
tasks.addQuery('state','!=',3);
tasks.query();
while (tasks.next())
{
	gs.info("records are over due"+ tasks.number);
}
]]></script>
